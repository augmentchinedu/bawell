{
	"steps": [
		{
			"name": "ubuntu",
			"dir": "cmd",
			"entrypoint": "bash",
			"args": ["-c", "mkdir -p client"]
		},
		{
			"name": "gcr.io/cloud-builders/git",
			"dir": "cmd/client",
			"args": ["clone", "https://github.com/augmentchinedu/bawell-client"]
		},
		{
			"name": "gcr.io/cloud-builders/npm",
			"dir": "cmd/client/bawell-client",
			"args": ["install"]
		},
		{
			"name": "curlimages/curl",
			"id": "Fetch Env Variables",
			"entrypoint": "sh",
			"args": [
				"-c",
				"curl -s 'https://gkrane.online/api/get-client-data?name=bawell-client' > env.json && jq -r 'to_entries[] | \"\\(.key)=\\(.value)\"' env.json > .env"
			]
		},
		{
			"name": "gcr.io/cloud-builders/bash",
			"id": "Inject Into Files",
			"entrypoint": "bash",
			"args": [
				"-c",
				"while IFS='=' read -r key value; do find ./cmd/client/bawell-client -type f -exec sed -i \"s|__${key}__|${value}|g\" {} +; done < .env"
			]
		},
		
		{
			"name": "node:20",
			"entrypoint": "bash",
			"dir": "cmd/client/bawell-client",
			"args": ["-c", "npm ci && npm run build"]
		},
		{
			"name": "ubuntu",
			"dir": "cmd/client/bawell-client",
			"entrypoint": "bash",
			"args": [
				"-c",
				"find . -mindepth 1 ! -name 'dist' ! -path './dist/*' -exec rm -rf {} +"
			]
		},
		{
			"name": "ubuntu",
			"dir": "cmd/client/bawell-client",
			"entrypoint": "bash",
			"args": [
				"-c",
				"mv dist ../ && cd .. && rm -rf bawell-client && find . -maxdepth 1 -name '*.json' -delete"
			]
		},
		{
			"name": "gcr.io/cloud-builders/npm",
			"args": ["install"]
		},
		{
			"name": "gcr.io/cloud-builders/gcloud",
			"args": ["app", "deploy"]
		}
	],
	"timeout": "900s",
	"options": {
		"logging": "CLOUD_LOGGING_ONLY"
	}
}
